.routes-builder
	form.routes__form(novalidate="", name="appendWaypointForm" ng-submit="RoutesBuilder.appendWaypoint()")
		input.routes__name(type="text", required="required", autofocus="", ng-maxlength="60", placeholder="Новая точка маршрута", ng-model="RoutesBuilder.routes.name")

		ul.routes__list(dnd-list="RoutesBuilder.routes.list")
			li.routes__item(ng-repeat="waypoint in RoutesBuilder.routes.list",
			dnd-effect-allowed="move"
			dnd-moved="RoutesBuilder.sortWaypoint($index)"
			dnd-dragend="RoutesBuilder.handlerSortEnd()"
			dnd-draggable="waypoint")
				span.routes__item-remove(ng-click="RoutesBuilder.removeWaypoint(waypoint, $index)", ng-bind="'x'")
				span.routes__title(ng-bind="waypoint.name")

	#routes_map.routes__map(routes-map="", routes-list="RoutesBuilder.routes.list")
